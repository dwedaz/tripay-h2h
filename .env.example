# Tripay H2H API Configuration
# Copy this file to .env and fill in your actual values

# Your Tripay API Key (get from your Tripay dashboard)
TRIPAY_API_KEY=your_api_key_here

# API Mode: true for sandbox, false for production
TRIPAY_SANDBOX=true

# Base URLs (usually don't need to change these)
TRIPAY_SANDBOX_URL=https://tripay.id/api-sandbox/v2
TRIPAY_PRODUCTION_URL=https://tripay.id/api/v2

# HTTP Client Settings
TRIPAY_TIMEOUT=30
TRIPAY_RETRY_TIMES=3
TRIPAY_RETRY_SLEEP=100

# Logging Settings
TRIPAY_LOGGING=false
TRIPAY_LOG_CHANNEL=daily

# Cache Settings
TRIPAY_CACHE_ENABLED=true
TRIPAY_CACHE_TTL=300
TRIPAY_CACHE_PREFIX=tripay_